<section class='add-applicant' ng-controller="ApplicantController as appCtrl">
    <div class="container">
        <h1>Add Applicant</h1>

        <form novalidate="novalidate" class="form-horizontal">
            <div class="control-group">
                <label class="control-label" for="inputName">Name</label>
                <div class="controls">
                    <input type="text" id="inputName" ng-model="appCtrl.applicant.name"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputEmail">Email</label>
                <div class="controls">
                    <input type="text" id="inputEmail" ng-model="appCtrl.applicant.email"/>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <a ng-click="appCtrl.cancel()" data-match-route="/applicants" href="#applicants" class="btn btn-small">Cancel</a>
                    <a ng-submit="appCtrl.create()" data-match-route="/applicants" href="#applicants" class="btn btn-small btn-primary">Create</a>
                </div>
            </div>
        </form>
    </div>

