<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <div class="page-header intro">
      <h2>Question</h2>
    </div>
    <form role="form" novalidate name="questionForm">
      <div class="form-group" ng-class="{'has-error': !questionForm.question_text.$valid}">
        <label for="question_text">Description</label>
        <textarea rows="3" type="text"
          class="form-control"
          ng-model="questionCtrl.question_text" required >
        </textarea>
      </div>
      <div class="form-group" ng-class="{'has-error': !questionForm.rspec_test.$valid}">
        <label for="rspec_test">Test</label>
        <textarea rows="5" type="text"
          class="form-control"
          ng-model="questionCtrl.rspec_test" required >
        </textarea>
      </div>
      <div class="actions">
        <a ng-href="#questions" class="btn btn-default">Back</a>
        <div class="pull-right">
          <button class="btn btn-primary" ng-click="questionCtrl.create()" ng-disabled="!questionForm.$valid">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>