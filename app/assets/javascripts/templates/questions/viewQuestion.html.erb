<section class='questions'>
  <h1>Questions</h1>

  <div class='results'>
    <button data-match-route="/questions/new">
      <a href="#questions/new">Create Question</a>
    </button>
    <div class="container">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Question</th>
            <th>RSPEC Test</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="question in questionCtrl.questions">
            <td>{{ question.id }}</td>
            <td>
              <span editable-text="question.question_text"
                    e-name="question_text"
                    e-form="rowform"
                    e-required>
                {{ question.question_text || 'empty' }}
              </span>
            </td>
            <td>
              <span editable-textarea="question.rspec_test"
                    e-name="rspec_test"
                    e-form="rowform"
                    e-required>
                <pre>{{ question.rspec_test || 'empty' }}</pre>
              </span>
            </td>
            <td style="white-space: nowrap">
              <form editable-form name="rowform" onaftersave="questionCtrl.update($data, question.id)" ng-show="rowform.$visible" class="form-buttons form-inline" shown="inserted == question">
                <button type="submit" class="btn btn-primary">
                  Save
                </button>
                <button type="button" ng-click="rowform.$cancel()" class="btn btn-default">
                  Cancel
                </button>
              </form>

              <div class="buttons" ng-show="!rowform.$visible">
                <button class="btn btn-primary" ng-click="rowform.$show()">Edit</button>
                <button class="btn btn-danger" ng-click="questionCtrl.delete(question.id)">Delete</button>
              </div>
            </td>
        </tbody>
      </table>
    </div>
  </div>
</section>






