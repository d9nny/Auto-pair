<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="page-header intro">
      <h1>Add Test</h1>
    </div>
    <form ng-submit="testCtrl.create()">
      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="Description"
        ng-model="testCtrl.description"></input>
      </div>
      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="Pass Score"
        ng-model="testCtrl.pass_score"></input>
      </div>
      <div class='pickQuestions'>
        <div>
          <table class="table table-striped" ng-controller="QuestionController as questionCtrl">
            <thead>
              <tr>
                <th>ID</th>
                <th>Question</th>
                <th>RSPEC Test</th>
                <th>Select</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="question in questionCtrl.questions">
                <td>{{ question.id }}</td>
                <td>{{ question.question_text }}</td>
                <td><pre>{{ question.rspec_test }}</pre></td>
                <td>
                  <input type="checkbox" name="{{question.id}}" id="{{question.id}}" ng-model="testCtrl.selection[question.id]">
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <a ng-click="testCtrl.cancel()" data-match-route="/tests" href="#tests" class="btn btn-small">Cancel</a>
          <input type="submit" id="submit" data-match-route="/tests" href="#tests" class="btn btn-small btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>