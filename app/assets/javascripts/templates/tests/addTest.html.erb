<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
  <h1>Add Test</h1>
    <form role="form" novalidate name="testForm">
      <div class="form-group" ng-class="{'has-error': !testForm.description.$valid}">
        <input type="text"
               class="form-control"
               placeholder="Description"
               ng-model="testCtrl.description"></input>
      </div>
      <div class="form-group">
        <input type="text"
               class="form-control"
               placeholder="Pass Score"
               ng-model="testCtrl.pass_score"></input>
      </div>
      <div class="control-group">
        <div class="controls">
            <a ng-click="testCtrl.cancel()"
               data-match-route="/tests"
               href="#tests" class="btn btn-small">Cancel</a>
            <input type="submit"
                   id="submit"
                   data-match-route="/tests"
                   href="#tests"
                   class="btn btn-small btn-primary">
        </div>
      </div>
    </form>
  </div>
</section>