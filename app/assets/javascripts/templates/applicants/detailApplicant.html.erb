<section class='add-applicant'>
  <div class="container">
    <h1>Edit Applicant</h1>
    <form ng-submit="appCtrl.update(id)">
      <div class="form-group">
        <input type="text"
          class="form-control"
          placeholder="Name"
          ng-model="appCtrl.name" required>
        </input>
      </div>

      <div class="form-group">
        <input type="text"
          class="form-control"
          placeholder="Email"
          ng-model="appCtrl.email">
        </input>
      </div>
      <div class="control-group">
        <div class="controls">
            <a ng-click="appCtrl.cancel()" data-match-route="/applicants" href="#applicants" class="btn btn-small">Cancel</a>
            <input type="submit" id="submit" data-match-route="/applicants" href="#applicants" class="btn btn-small btn-primary">
        </div>
      </div>
    </form>
  </div>
</section>